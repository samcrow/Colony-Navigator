<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/green_pressed_top"
                android:endColor="@color/green_pressed_bottom"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/green_border" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/green_pressed_top"
                android:startColor="@color/green_pressed_bottom"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/green_border" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/green_up_top"
                android:startColor="@color/green_up_bottom"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/green_border" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>